                            };

                            if (examples[num]) {
                                document.getElementById('htmlEditor').value = examples[num].html;
                                document.getElementById('cssEditor').value = examples[num].css;
                                updatePreview();
                            }
                        }

                        // Auto-close tags functionality
                        function enableAutoClose() {
                            const htmlEditor = document.getElementById('htmlEditor');
                            
                            htmlEditor.addEventListener('input', function(e) {
                                // Simple auto-close for common tags
                                const cursorPos = this.selectionStart;
                                const textBefore = this.value.substring(0, cursorPos);
                                const textAfter = this.value.substring(cursorPos);
                                
                                // Check if user just typed an opening tag
                                if (textBefore.endsWith('<') && !textAfter.startsWith('/')) {
                                    const tagMatch = textBefore.match(/<([a-zA-Z][a-zA-Z0-9]*)$/);
                                    if (tagMatch) {
                                        const tagName = tagMatch[1];
                                        const newText = textBefore + '></' + tagName + '>';
                                        this.value = newText + textAfter;
                                        
                                        // Place cursor between the tags
                                        this.selectionStart = cursorPos;
                                        this.selectionEnd = cursorPos;
                                    }
                                }
                            });
                            
                            alert('Auto-close tags enabled! Try typing <div> or <p>');
                        }
                        
                        // Simple formatting functions
                        function formatHTML() {
                            const htmlEditor = document.getElementById('htmlEditor');
                            let html = htmlEditor.value;
                            
                            // Basic indentation
                            let indentLevel = 0;
                            let formatted = '';
                            const lines = html.split('>');
                            
                            for (let i = 0; i < lines.length; i++) {
                                let line = lines[i].trim();
                                if (line.length === 0) continue;
                                
                                // Check if this line closes a tag
                                if (line.startsWith('</')) {
                                    indentLevel--;
                                }
                                
                                // Add indentation
                                formatted += '  '.repeat(indentLevel) + line + '>\\n';
                                
                                // Check if this line opens a new tag (not self-closing)
                                if (line.startsWith('<') && !line.startsWith('</') && 
                                    !line.endsWith('/') && !line.includes('<br') && 
                                    !line.includes('<img') && !line.includes('<input')) {
                                    indentLevel++;
                                }
                            }
                            
                            htmlEditor.value = formatted;
                        }
                        
                        function formatCSS() {
                            const cssEditor = document.getElementById('cssEditor');
                            let css = cssEditor.value;
                            
                            // Basic CSS formatting
                            css = css.replace(/;/g, ';\\n  ');
                            css = css.replace(/}/g, '\\n}\\n');
                            css = css.replace(/{/g, ' {\\n  ');
                            
                            cssEditor.value = css;
                        }

                        // Initialize preview
                        updatePreview();
                    <\/script>
                </body>
                </html>
            `);
            playgroundWindow.document.close();
        }
    </script>
</body>
</html>
