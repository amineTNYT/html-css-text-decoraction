                <h2 class="section-title">Font Weight</h2>
                <div class="property-group">
                    <div class="property-examples">
                        <h3>Examples:</h3>
                        <div class="example-item weight-100">Thin text - 100</div>
                        <div class="example-item weight-200">Extra Light - 200</div>
                        <div class="example-item weight-300">Light text - 300</div>
                        <div class="example-item weight-400">Normal text - 400</div>
                        <div class="example-item weight-500">Medium text - 500</div>
                        <div class="example-item weight-600">Semi Bold - 600</div>
                        <div class="example-item weight-700">Bold text - 700</div>
                        <div class="example-item weight-800">Extra Bold - 800</div>
                        <div class="example-item weight-900">Black text - 900</div>
                        <div class="example-item weight-bold">Bold (keyword)</div>
                        <div class="example-item weight-bolder">Bolder (keyword)</div>
                    </div>
                    <div class="property-code">
                        <h3>CSS Code:</h3>
                        <div>.thin-text {</div>
                        <div>&nbsp;&nbsp;<span class="property-name">font-weight</span>: <span class="property-value">100</span>;</div>
                        <div>}</div>
                        <br>
                        <div>.light-text {</div>
                        <div>&nbsp;&nbsp;<span class="property-name">font-weight</span>: <span class="property-value">300</span>;</div>
                        <div>}</div>
                        <br>
                        <div>.normal-text {</div>
                        <div>&nbsp;&nbsp;<span class="property-name">font-weight</span>: <span class="property-value">400</span>;</div>
                        <div>}</div>
                        <br>
                        <div>.bold-text {</div>
                        <div>&nbsp;&nbsp;<span class="property-name">font-weight</span>: <span class="property-value">700</span>;</div>
                        <div>}</div>
                        <br>
                        <div>.bolder-text {</div>
                        <div>&nbsp;&nbsp;<span class="property-name">font-weight</span>: <span class="property-value">900</span>;</div>
                        <div>}</div>
                        <br>
                        <div>.keyword-bold {</div>
                        <div>&nbsp;&nbsp;<span class="property-name">font-weight</span>: <span class="property-value">bold</span>;</div>
                        <div>&nbsp;&nbsp;<span class="comment">/* Same as 700 */</span></div>
                        <div>}</div>
                        <br>
                        <div>.keyword-bolder {</div>
                        <div>&nbsp;&nbsp;<span class="property-name">font-weight</span>: <span class="property-value">bolder</span>;</div>
                        <div>&nbsp;&nbsp;<span class="comment">/* Bolder than parent */</span></div>
                        <div>}</div>
                    </div>
                </div>
            </div>

